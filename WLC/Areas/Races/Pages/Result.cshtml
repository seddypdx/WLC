@page
@model WLC.Areas.Races.Pages.ResultModel
@{
    ViewData["Title"] = "Results";

}


<div class="section">
    <div class="container">
        <form asp-route="Result">
            <div class="row">
                <div class="col-md-6">
                    <select asp-for="ActiveRaceId" asp-items="@Model.RaceList" class="form-control">
                        <option value="">(select one)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="submit" />
                </div>
            </div>

        </form>
        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>
        </div>

        <h2> @Model.ActiveRace.RaceName</h2>


        <div class="row">
            <div class="col-md-6">
                <h6>Selections</h6>
                <p>
                    <input type="text" id="myFilter" onkeyup="filterCards()" placeholder="Search for names.." />
                </p>
                <div id="cardList">
                    @foreach (var racer in Model.AvailableRacers)
                    {
                        <div class="card w-50 bg-primary text-white mb-3">

                            <div class="card-body">
                                <h7 class="card-title"> <a asp-route-racerId="@racer.RacerId"  class="text-white">@racer.LastName, @racer.FirstName (@racer.Age)</a></h7>
                                <p>@racer.Cabin.CabinName</p>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            <div class="col-md-6">
                <h6>Results</h6>
                @foreach (var result in Model.Results)
                {
                    <div class="card w-50 bg-light text-white mb-3">

                        <div class="card-body">
                            <h7 class="card-title"> <a asp-route-racerId="@result.Racer.RacerId" class="text-white">@result.Racer.LastName, @result.Racer.FirstName (@result.Racer.Age)</a></h7>
                            <p>@result.Racer.Cabin.CabinName</p>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>



</div>


